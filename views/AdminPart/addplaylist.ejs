<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/CSS/Admin%20CSS/Sidenavbar.css">
    <link rel="stylesheet" type="text/css" href="/CSS/Admin%20CSS/addplaylist.css">
    <link rel="stylesheet" type="text/css" href="/CSS/Admin%20CSS/ManageSongs.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>SoundSpot</title>
    <link rel="icon" href="/photo/2.png" type="image/png">
    <script src="/JavaScript/Admin%20JavaScript/Sidenavbar.js"></script>
    <script src="/JavaScript/Admin%20JavaScript/addplaylist.js"></script>
<!--     <script src="/JavaScript/Admin%20JavaScript/addsong.js"></script>
 -->    <script src="/JavaScript/Admin%20JavaScript/german.js"></script>
    <script type="text/javascript"
        src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit&hl=en"></script>
</head>

<body>
    <%- include('../includes/sidenav&navbarsADMIN.ejs')%>
        <h1 class="title1">Create a Playlist</h1>
        <div class="form-container">
            <form id="add-playlist-form" name="add-playlist-form" action="/addplaylist/upload" enctype="multipart/form-data" method="post">

                <label for="playlist-name">Playlist Name</label>
                <input type="text" name="playlistName" id="playlist-name" placeholder="Enter playlist name" required oninput="validateInput('playlist-name')">

                <div id="playlist-name-error" class="error-message"></div>
                
                <label for="genre">Genre</label>
                <select id="genre" name="genre" required>
                    <optgroup label="Genre">
                        <option value="" selected disabled hidden>Select Genre</option>
                        <option value="Alternative">Alternative</option>
                        <option value="Arab/Middle Eastern">Arab/Middle Eastern</option>
                        <option value="Blues">Blues</option>
                        <option value="Classical">Classical</option>
                        <option value="Country">Country</option>
                        <option value="Dance">Dance</option>
                        <option value="Electronic">Electronic</option>
                        <option value="Folk">Folk</option>
                        <option value="Hip Hop">Hip Hop</option>
                        <option value="Indie">Indie</option>
                        <option value="Jazz">Jazz</option>
                        <option value="Metal">Metal</option>
                        <option value="Pop">Pop</option>
                        <option value="Punk">Punk</option>
                        <option value="R&B">R&B</option>
                        <option value="Reggae">Reggae</option>
                        <option value="Rock">Rock</option>
                        <option value="Soul">Soul</option>
                        <option value="Techno">Techno</option>
                        <option value="Trance">Trance</option>
                    </optgroup>
<!--                     <option value="Other">Other</option>
 -->                </select>
<!--                 <input type="text" id="other-genre-input" placeholder="Enter genre" style="display: none;">
 -->                <div id="genre-error" class="error-message"></div> <!-- Add this line -->

                <div class="dropdown" id="dropdown">
                    <button class="dropbtn">Select Songs</button>
                    <div class="dropdown-content">
                        <% songs.forEach(song=> { %>
                            <input type="checkbox" id="<%= song._id %>" name="songIds" value="<%= song._id %>">
                            <label for="<%= song._id %>">
                                <%= song.songName %> - <%= song.artistName %>
                            </label><br>
                            <% }) %>
                    </div>
                </div>
                <div id="songIds-error" class="error-message"></div>

                <div id="alert-container"></div>
                <div id="alert-container"></div>
                <label for="privacy-settings">Privacy Settings</label>
                <select id="privacy-settings" name="PrivacySettings" required>
                    <option value="" selected disabled hidden>Select Type</option>
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    <option value="hidden">Hidden</option>
                </select>
                <div id="privacy-settings-error" class="error-message"></div>
                

                <label for="image-file">Upload Image (JPEG, PNG)</label>
                <div class="file-upload" id="file-upload">
                    <input type="file" id="image-file" accept="image/*" required name="imagePlaylist">
                    <div id="image-file-error" class="error-message"></div>
                    <label for="image-file">Click to upload</label>
                </div>
                <div id="imagePlaylist-error" class="error-message"></div>


                <button type="button" id="save-button" onclick="validateForm()">Save</button>
            </form>
        </div>
</body>

</html>