<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/Admin/Admin%20CSS/Sidenavbar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>SoundSpot</title>
    <link rel="icon" href="/photo/2.png" type="image/png">

    <script src="/Admin/Admin%20JavaScript/Sidenavbar.js"></script>
    <link rel="stylesheet" href="/Admin/Admin%20CSS/ManageUsers.css">
    <script src="/Admin/Admin%20JavaScript/ManageUsers.js"></script>
</head>

<body>
    <%- include('../includes/sidenav&navbarsADMIN.ejs') %>
    <!-- User profiles list -->
    <div class="main-content">
        <div class="top-content">
            <i class="fa-solid fa-plus" id="plus" title="Add User"></i>

            <div class="top-texts">
                <div class="top-text">Name</div>
                <div class="top-text">Username</div>
                <div class="top-text">Last Access</div>
            </div>
            <div class="actions">
                <div class="checkbox" id="selectAllCheckbox1">
                    <input type="checkbox" id="topCheckbox1" class="checkbox-input" />
                    <span class="checkbox-custom"></span>
                </div>
                <i class="fa-solid fa-sort"></i>
                <i class="fa-solid fa-envelope" title="Send E-mail"></i>
                <i class="fa-solid fa-trash" title="Delete" id="delete-icon1"></i>
            </div>
        </div>
        <div class="list-container">
            <% users.forEach(user => { %>
                <div class="list-item">
                    <div class="content">
                        <img src="\public\photo\sherry.png">
                        <div class="text"><%= user.username %></div>
                        <div class="text"><%= user.username %></div>
                        <div class="text">Yesterday</div>
                        <input class="custom-checkbox" type="checkbox" id="userCheckbox_<%= user.username %>"
                            data-username="<%= user.username %>">
                        <i class="fa-solid fa-chevron-right"></i>
                    </div>
                </div>
        
                <!-- User Info Container -->
                <div class="user-info-container">
                    <div class="user-info">
                        <div class="user-icons">
                            <!-- Your icon elements here -->
                        </div>
                        <div class="general-content">
                            <div class="first-sec">
                                <div>
                                    <label>Date of Birth</label>
                                    <span><%= user.dateOfBirth %></span>
                                </div>
                                <div>
                                    <label>Country</label>
                                    <span><%= user.country %></span>
                                </div>
                                <div>
                                    <label>Email</label>
                                    <span><%= user.email %></span>
                                </div>
                                <div>
                                    <label>Phone Number</label>
                                    <span><%= user.phone %></span>
                                </div>
                                <div>
                                    <label>Role</label>
                                    <span><%= user.role %></span>
                                </div>
                            </div>
                            <div class="second-sec">
                                <div>
                                    <label>Plan Type</label>
                                    <span><%= user.planType %></span>
                                </div>
                                <div>
                                    <label>Start Date</label>
                                    <span><%= user.startDate %></span>
                                </div>
                                <div>
                                    <label>Renewal Date</label>
                                    <span><%= user.renewalDate %></span>
                                </div>
                                <div>
                                    <label>Billing Information</label>
                                    <span><%= user.billingInfo %></span>
                                </div>
                                <div>
                                    <label>Payment Method</label>
                                    <span><%= user.paymentMethod %></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
        

    </div>

    <div class="settings-popup-container">
        <div class="settings-popup">
            <h3>Settings</h3>
            <div class="language-selection">
                <label for="language-select">Change Language:</label>
                <select id="language-select">
                    <option value="en">English</option>
                    <option value="gm">German (Deutsch)</option>
                </select>
            </div>
            <div class="button-group">
                <button id="save-button">Save</button>
                <button id="cancel-button">Cancel</button>
            </div>
        </div>
    </div>

    <div class="delete-popup" id="delete-popup">
        <h2>Confirm Deletion</h2>
        <p>Are you sure you want to delete this item?</p>
        <button id="ok-delete" class="btn">OK</button>
        <button id="cancel-delete" class="btn">CANCEL</button>
    </div>

    <div class="select-item-popup">
        <div class="popup-content" id="one-edit">
            <h2>Please select one user at a time</h2>
        </div>
    </div>
    <div class="select-item-popup">
        <div class="popup-content" id="select-item">
            <h2>No Users</h2>
        </div>
    </div>
    <div class="select-item-popup">
        <div class="popup-content" id="select-item-popup">
            <h2>Please select an item</h2>
        </div>
    </div>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</body>

</html>
