<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/Admin/Admin%20CSS/Sidenavbar.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>SoundSpot</title>
    <link rel="icon" href="/photo/2.png" type="image/png">

    <script src="/Admin/Admin%20JavaScript/Sidenavbar.js"></script>
    <link rel="stylesheet" href="/Admin/Admin%20CSS/Reports.css">
    <script src="/Admin/Admin%20JavaScript/Reports.js"></script>
    <script src="/Admin/Admin%20JavaScript/german.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit&hl=en"></script>
</head>

<body>
    <%- include('../includes/sidenav&navbarsADMIN.ejs')%>
    <header>
        <h1>SoundSpot - Statistics and Reports</h1>
    </header>
    <nav>
        <ul>
            <li><a href="#" onclick="toggleUserReports()">User Reports</a></li>
            <li><a href="#" onclick="toggleAppStatistics()">Application Statistics</a></li>
            <li><a href="#" onclick="toggleAll()">Show both</a></li>
        </ul>
    </nav>
    <section id="user-reports">
        <h2>User Reports</h2>
        <nav style="margin-left: 950px;">
            <ul>
                <li><a href="#" onclick="filterReports('pending')">Unresolved Problems</a></li>
                <li><a href="#" onclick="filterReports('resolved')">Resolved Problems</a></li>
                <li><a href="#" onclick="sortReportsByDate()">Sort by Date</a></li>
            </ul>
        </nav>
        <div id="report-container">
            <% reports.forEach(report => { %>
                <div class="report">
                    <h3>User: <%= report.email.split('@')[0] %></h3>
                    <p>Email: <%= report.email %></p>
                    <p>Issue: <%= report.problemTypes.join(', ') %></p>
                    <p>Date: <%= new Date(report.createdAt).toLocaleDateString() %></p>
                    <p>Status: <span class="status">Pending</span></p>
                    <p>Details:</p>
                    <p><%= report.comment %></p>
                    <button onclick="resolveIssue('<%= report._id %>')">Mark as Resolved</button>
                    <button onclick="emailUser('<%= report.email %>')">Email User</button>
                </div>
            <% }) %>
        </div>
    </section>
    <section id="app-statistics">
        <h2>Application Statistics</h2>
        <!-- Add statistics rendering here -->
    </section>
</body>
</html>
